<div class="flex flex-col justify-space-between-md m-12">
    <div class="login-card card p-2">
        <h2 class="text-xl page-title flex flex-col justify-center items-center p-2">Signup</h2>
        <form class="form signup-form flex flex-col justify-center items-center">
            <div class="form-group p-1">
                <label for="username-signup"></label>
                <input class="form-input mb-1" type="text" id="username-signup" placeholder="Username" />
            </div>
            <div class="form-group p-1">
                <label for="email-signup"></label>
                <input class="form-input mb-1" type="text" id="email-signup" placeholder="Email" />
            </div>
            <div class="form-group p-1">
                <label for="password-signup"></label>
                <input class="form-input mb-1" type="password" id="password-signup" placeholder="Password" />
            </div>
            <div class="form-group">
                <button
                    class="btn btn-primary btn-wide bg-secondary text-lg text-semibold border border-solid border-gray-500 p-1 shadow-lg hover:bg-sky-700 hover:text-white"
                    type="submit">Create Account</button>
            </div>
        </form>
    </div>
</div>

<script src="./js/signup.js"></script>