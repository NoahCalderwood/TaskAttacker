<div class="flex flex-row justify-space-between-md">
    <div class="login-card">
        <h2 class="page-title flex flex-col justify-center items-center">Signup</h2>
        <form class="form signup-form flex flex-col justify-center items-center">
            <div class="form-group">
                <label for="username-signup"></label>
                <input class="form-input mb-1" type="text" id="username-signup" placeholder="Username" />
            </div>
            <div class="form-group">
                <label for="email-signup"></label>
                <input class="form-input mb-1" type="text" id="email-signup" placeholder="Email" />
            </div>
            <div class="form-group">
                <label for="password-signup"></label>
                <input class="form-input mb-1" type="password" id="password-signup" placeholder="Password" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-wide bg-white shadow-lg hover:bg-sky-700 hover:text-white" type="submit">Create Account</button>
            </div>
        </form>
    </div>
</div>

<script src="./js/signup.js"></script>